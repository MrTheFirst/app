
.textarea--default

	form = typeof( $form ) == 'object' ? $form : {}
	padding = typeof( form.padding ) == 'unit' ? form.padding : 8

	resize vertical
	vertical-align top
	line-height 1.15
	min-height ss(120)
	padding ss( padding * 2 )
	
	{$form_field}

	&::placeholder
		font-family inherit
		color alpha( @color, 50% )
		font-size @font-size
		font-style normal
		font-weight 400
		text-overflow ellipsis
		opacity 1
