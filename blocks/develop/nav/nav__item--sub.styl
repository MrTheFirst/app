
.nav__item--sub
	
	&:after
		content ''
		display inline-block
		vertical-align middle
		width 0
		height 0
		border solid transparent
		border-width 4px 4px 0 4px
		border-top-color #333
		margin -4px 0 0 ss(4)
		transform rotate(0deg)
		transition transform .4s
		
	&:hover
		&:after
			transform rotate(90deg)
			