
/*!*
 * Lightbox
 */

.lightboxOverlay
	abs top left
	z-index 9999
	background-color black
	opacity .8
	display none

.lightbox
	abs left
	width 100%
	z-index 10000
	text-align center
	line-height 0
	font-weight normal

	.lb-image
		display block
		height auto
		max-width inherit

	a
		img
			border none


.lb-outerContainer
	position relative
	background-color #fff
	width ss(250)
	height ss(250)
	margin 0 auto
	
	&:after
		content ''
		display table
		clear both

	*zoom 1

.lb-container
	& > .nav
		left 0

.lb-loader
	abs top 43% left
	height 25%
	width 100%
	text-align center
	line-height 0

.lb-cancel
	display block
	width ss(32)
	height @width
	margin 0 auto
	background transparent
	border solid 4px #333
	border-left-color transparent
	border-radius 50%
	animation lightboxloading 1s infinite linear

.lb-nav
	abs top left
	height 100%
	width 100%
	z-index 10

	a
		
		&.lb-prev,
		&.lb-next
			opacity 0
			transition opacity .4s
			&:hover
				opacity 1
			&:before
				content ''
				abs top 50%
				width ss(50)
				height @width
				margin-top (-(@height / 2))
			
		&.lb-prev
			left 0
			width 34%
			float left
			
			&:before
				left (-(ss(60)))
				background b64('img/prev.svg') center no-repeat

		&.lb-next
			right 0
			width 64%
			float right
			
			&:before
				right (-(ss(60)))
				background b64('img/next.svg') center no-repeat

.lb-prev,
.lb-next
	height 100%
	cursor pointer
	display block

.lb-dataContainer
	margin 0 auto
	padding-top ss(10)
	width 100%
	&:after
		content ''
		display table
		clear both
	*zoom 1

.lb-data
	padding 0 ss(4)
	color #ccc

	.lb-details
		width 85%
		float left
		text-align left
		line-height 1.1em
	
	.lb-caption
		font-size ss(13)
		font-weight 700
		line-height 1em

	.lb-number
		display block
		clear left
		padding-bottom 1em
		font-size ss(12)
		color #999

	.lb-close
		display block
		float right
		width ss(30)
		height @width
		background b64('img/close.svg') center no-repeat
		text-align right
		opacity .7
		transition opacity .4s

		&:hover
			cursor pointer
			opacity 1


@keyframes lightboxloading
	0%
		transform rotate(0deg)
	100%
		transform rotate(359deg)

