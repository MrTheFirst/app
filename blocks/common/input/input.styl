
/*!*
 * Input
 */

.input

	form = typeof( $form ) == 'object' ? $form : {}
	height = typeof( form.height ) == 'unit' ? form.height : 44
	padding = typeof( form.padding ) == 'unit' ? form.padding : 8

	display block
	width 100%
	max-width 100%
	height ss( height )
	padding 0 ss( padding * 2 )
	text-transform none
	line-height normal
	overflow visible
	outline none
	margin 0
	border 0

	&[type="number"]
		&::-webkit-inner-spin-button,
		&::-webkit-outer-spin-button
			height auto

	&[type="search"]
		-webkit-appearance textfield
		outline-offset -2px
		
		&::-webkit-search-cancel-button,
		&::-webkit-search-decoration
			-webkit-appearance none
