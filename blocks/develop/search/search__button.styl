
.search__button
	abs top 50% right
	width ss(16)
	height @width
	font-size 0
	background-color transparent
	border solid 2px #000
	border-radius 50%
	margin -1px ss(15) 0 0
	opacity .2
	transition opacity .4s
	backface-visibility hidden
	transform translate(0,-50%) rotate(45deg)

	&:after
		content ''
		abs top 50% left 100%
		width ss(8)
		height ss(2)
		background-color #000
		margin -1px 0 0 0
		border-radius 1px
		transform scaleX(1)
		transition transform .1s
		
	&:hover
		opacity .8
