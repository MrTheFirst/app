
/*!*
 * Select
 */

.select
	
	form = typeof( $form ) == 'object' ? $form : {}
	height = typeof( form.height ) == 'unit' ? form.height : 44
	padding = typeof( form.padding ) == 'unit' ? form.padding : 8

	display block
	width 100%
	max-width 100%
	text-transform none
	outline none
	padding 0
	margin 0
	border 0

	text-indent 0.01px
	text-overflow ''
	appearance none
	cursor pointer

	height ss( height )
	padding 0 ss( 25, 1px ) 0 ss( padding * 2 )
	
	background-color transparent
	background-image b64('img/select.svg')
	background-repeat no-repeat
	background-position right center
	
	border-radius 0

	&::-ms-expand
		display none

	optgroup
		font-weight 700
